{
    "name": "mlops-cifar-classification",
    "build": {
        "context": "..",
		"dockerfile": "Dockerfile"
	},
    "containerUser": "root",
    "runArgs": [
        "--gpus", "all"
    ],
    "postCreateCommand": "poetry install; git config --global --add safe.directory /workspaces/mlops-cifar-classifier; pre-commit install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "eamodio.gitlens",
                "charliermarsh.ruff",
                "github.vscode-github-actions",
                "GitHub.copilot"
            ]
        },
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "python.pythonPath": "/usr/bin/python3",
            "python.linting.ruffEnabled": true,
            "python.formatting.provider": "ruff"
        }
    }
  }
